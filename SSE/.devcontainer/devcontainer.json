{
  "name": "Generic Dev Environment (Java + Node + Flutter)",
  "dockerFile": "Dockerfile",

  // Forward ports so you can access Flutter Web servers from host
  "forwardPorts": [8080],



  // Mount your host folder into the container
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",

  // VS Code extensions to automatically install inside the container
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "redhat.java",
        "vscjava.vscode-java-pack",
        "ms-vscode.cpptools",
        "ms-python.python"
      ]
    }
  },

  // Run as root inside container (simpler for installs)
  "remoteUser": "root",

  // Run this after container is created
  "postCreateCommand": "flutter doctor"
}
